<%= form_with(model: player) do |form| %>
  <% if player.errors.any? %>
    <div class="alert alert-danger" role="alert">
    <%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:

    <ul>
      <% player.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control mt-1", required: true %>
    <small id="nameHelp" class="form-text text-muted">Name of player.</small>
  </div>

  <div class="form-group  mt-3">
    <%= form.label :tag_in %>
    <%= form.text_field :tag_in, class: "form-control mt-1", required: true  %>
    <small id="nameHelp" class="form-text text-muted">Tag number the player is starting with. This will used to calculate final order in case of a tie.</small>
  </div>

  <div class="form-group  mt-3">
    <%= form.label :score %>
    <%= form.text_field :score, class: "form-control mt-1" %>
    <small id="nameHelp" class="form-text text-muted">Final score of the player. If you are creating a new player, feel free to leave this blank and edit the player after they are finished play.</small>
  </div>

  <%= form.hidden_field :round_id, value: @round_id %>

  <div class="actions mt-5">
    <%= form.submit "Submit", class: "btn btn-primary active" %>
  </div>
<% end %>
  